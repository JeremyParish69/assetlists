{
    "$id": "https://osmosis.zone/pools.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Pools List",
    "description": "The Pools list shows each pair asset's 'primary' pool for each common base asset. This allows spot price tracking to be automated.",
    "type": "object",
    "properties": {
        "assets": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/asset"
            }
        }
    },
    "$defs": {
        "asset": {
            "required": [
                "denom",
                "pools"
            ],
            "properties": {
                "denom": {
                    "type": "string",
                    "uniqueitem": true
                },
                "symbol": {
                    "type": "string"
                },
                "pools": {
                    "type": "object",
                    "minProperties": 1,
                    "properties": {
                        "OSMO": {
                            "type": "integer",
                            "exclusiveMinimum": 0
                        },
                        "ATOM": {
                            "type": "integer",
                            "exclusiveMinimum": 0
                        },
                        "UST": {
                            "type": "integer",
                            "exclusiveMinimum": 0
                        },
                        "USDC.axl": {
                            "type": "integer",
                            "exclusiveMinimum": 0
                        }
                    }
                }
            }
        }
    }
}
